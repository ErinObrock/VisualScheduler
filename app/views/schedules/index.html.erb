<container>
<p id="notice"><%= notice %></p>
<div class='text-center'>
<h1>Listing Schedules</h1>

<table class="table table-striped table condensed">
  <thead>
    <tr class='text-center'>
      <th class='text-center' style="font-size:20px">I need to...</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td class="col-md-2" style="font-size:25px">  <%= schedule.title %>  </td>
        <td class="col-md-1"><button type="button" class="btn btn-primary"><%= link_to 'Show', user_schedule_path(@user, schedule) %></button> </td>
        <td class="col-md-1"><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_user_schedule_path(@user, schedule) %></button></td>
        <td class="col-md-1"><button type="button" class="btn btn-danger"><%= link_to 'Destroy', user_schedule_path(@user, schedule) , :method => :delete, data: { confirm: 'Are you sure?' } %></button></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Schedule', new_user_schedule_path %></button>
</div>
</container>
